@model ShopProjectMVC.Core.Models.Order

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    
     <dl class="row">
        <dt class="col-sm-2">CreatedAt</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

